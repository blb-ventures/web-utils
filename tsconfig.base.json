{
  "compilerOptions": {
    "lib": ["ES6", "DOM", "ES2017"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./src/**/*.spec.ts",
  ]
}
